<% content_for :page_header do %>
  <div class="page-header my-3">
    <h1 class="page-title font-weight-bold">
      <i class="<%= t("activerecord.models.#{model.model_name.singular}.icon") %> mr-2"></i>Relat√≥rio de <%= model.model_name.human(count: 2) %>
      <% if %w(edit new create show).include? action_name %>
        <small class="ml-1 text-muted">
          <%= t("helpers.actions.#{action_name}") %>
        </small>
      <% end %>
    </h1>
    <div class="page-options d-none d-md-block ml-auto">
      <%= render 'application/breadcrumb' %>
    </div>
  </div>
<% end %>
<div class="card mb-3">
  <div class="card-status bg-transparent"></div>
  <div class="card-header p-4">
    <h3 class="card-title">
      <% if @list.any? %>
        <h1 class="pt-2 card-title mb-2">
          <% if @list.count.zero? %>
            Nenhum registro encontrado
          <% elsif @list.count > 1 %>
            <strong class="mr-1"><%= @list.count %></strong>registros encontrados
          <% else %>
            <strong class="mr-1"><%= @list.count %></strong>registro encontrado
          <% end %>
        </h1>
      <% end %>
    </h3>
    <div class="card-options mr-1">
      <button class="btn btn-primary" data-toggle="modal" data-target="#search-form-modal">
        <i class="fas fa-search mr-2"></i><%= t('helpers.actions.search') %>
      </button>
    </div>
  </div>
  <% if @list.empty? %>
  <div class="card-alert alert alert-warning mb-0 text-center font-weight-bold"><i class="fas fa-exclamation-triangle mr-2"></i>Nenhum registro encontrado.</div>
  <% else %>
    <div class="card-body table-responsive p-0 m-0">
      <table class="table card-table table-vcenter text-nowrap table-hover">
        <%= yield :table_header %>
        <%= yield :table_body %>
      </table>
    </div>
  <% end %>
  <div class="card-footer">
    <% if @pagy.count > 1 %>
      <div class="col-sm-12 col-lg-<%= can?(:create, model) ? '6' : '12' %>">
        <div class="float-right">
          <%= pagy_bootstrap_combo_nav_js(@pagy).html_safe %>
        </div>
      </div>
    <% end %>
  </div>
</div>
