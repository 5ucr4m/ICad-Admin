<%= render 'application/page_header', model: Role %>
<div class="card">
  <div class="card-status bg-blue"></div>
  <div class="card-header p-4">
    <div class="col-sm-12 col-lg-12">
      <div class="form-row">
        <div class="col-sm-12 col-lg-6 p-0">
          <%= render 'application/pagy_count', list: @pagy %>
        </div>
        <div class="col-sm-12 col-lg-6 p-0">
          <%= search_form_for @query do |f| %>
          <%= f.search_field :search_cont, class: 'form-control', placeholder: t('helpers.search') %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="card-body table-responsive p-0 m-0">
    <table class="table card-table table-vcenter text-nowrap table-hover">
      <thead>
      <tr>
                  <th><%= Role.human_attribute_name :name %></th>
                  <th><%= Role.human_attribute_name :description %></th>
                  <th><%= Role.human_attribute_name :role %></th>
                  <th><%= Role.human_attribute_name :app_module %></th>
                  <th><%= Role.human_attribute_name :slug %></th>
                <% if can? :manage, Role %>
        <th><%= t('helpers.labels.actions') %></th>
        <% end %>
      </tr>
      </thead>
      <tbody>
      <% @roles.each do |role| %>
      <tr>
                  <td><%= role.name %></td>
                  <td><%= role.description %></td>
                  <td><%= role.role_id %></td>
                  <td><%= role.app_module_id %></td>
                  <td><%= role.slug %></td>
                <% if can? :manage, Role %>
        <td>
          <%= render 'application/table_links', f: role %>
        </td>
        <% end %>
      </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <div class="card-footer">
    <div class="col-sm-12 col-lg-12 p-0">
      <div class="form-row">
        <div class="col-sm-12 col-lg-6 p-0">
          <%= link_to new_role_path, class: 'btn btn-primary align-middle mb-md-0 mb-sm-3' do %>
          <i class="fas fa-plus mr-2"></i>Novo
          <% end %>
        </div>
        <div class="col-sm-12 col-lg-6 p-0">
          <div class="float-right">
            <%= pagy_bootstrap_nav(@pagy).html_safe %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
