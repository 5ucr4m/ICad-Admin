<%= render 'application/page_header', model: State %>
<div class="card">
  <div class="card-status bg-transparent"></div>
  <div class="card-header p-4">
    <div class="col-sm-12 col-lg-12">
      <div class="form-row">
        <div class="col-sm-12 col-lg-6 p-0">
          <%= render 'application/pagy_count', list: @pagy, model: State, url: new_state_path %>
        </div>
        <div class="col-sm-12 col-lg-6 p-0">
          <%= search_form_for @query do |f| %>
            <%= f.search_field :search_cont, class: 'form-control', placeholder: t('helpers.search') %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="card-body table-responsive p-0 m-0">
    <table class="table card-table table-vcenter text-nowrap table-hover">
      <thead>
      <tr>
        <th><%= State.human_attribute_name :name %></th>
        <th><%= State.human_attribute_name :abbreviation %></th>
        <th><%= State.human_attribute_name :code %></th>
        <th><%= State.human_attribute_name :reference %></th>
        <th><%= State.human_attribute_name :country %></th>
        <th><%= t('helpers.labels.actions') %></th>
      </tr>
      </thead>
      <tbody>
      <% @states.includes(:country).each do |state| %>
        <tr>
          <td><%= state.name %></td>
          <td><%= state.abbreviation %></td>
          <td><%= state.code %></td>
          <td><%= state.reference %></td>
          <td><%= state&.country&.name_formatted %></td>
          <td class="text-center">
            <%= render 'application/table_links', f: state %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <div class="card-footer">
    <%= render 'application/footer_links', url: new_state_path, model: State %>
  </div>
</div>
