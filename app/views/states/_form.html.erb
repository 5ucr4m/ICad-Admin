<%= form_with(model: @state, id: :state) do |f| %>
  <% content_for :body do %>
      <div class="form-group col-md-4">
        <%= f.label :name, {class: 'form-label'} %>
        
          <%= f.text_field :name, {class: 'form-control', disabled: show?(f.object.persisted?)} %>
        
      </div>
      <div class="form-group col-md-4">
        <%= f.label :abbreviation, {class: 'form-label'} %>
        
          <%= f.text_field :abbreviation, {class: 'form-control', disabled: show?(f.object.persisted?)} %>
        
      </div>
      <div class="form-group col-md-4">
        <%= f.label :code, {class: 'form-label'} %>
        
          <%= f.text_field :code, {class: 'form-control', disabled: show?(f.object.persisted?)} %>
        
      </div>
      <div class="form-group col-md-4">
        <%= f.label :reference, {class: 'form-label'} %>
        
          <%= f.text_field :reference, {class: 'form-control', disabled: show?(f.object.persisted?)} %>
        
      </div>
      <div class="form-group col-md-4">
        <%= f.label :slug, {class: 'form-label'} %>
        
          <%= f.text_field :slug, {class: 'form-control', disabled: show?(f.object.persisted?)} %>
        
      </div>
  <% end %>
  <%= render template: 'application/form', locals: {form: @state} %>
<% end %>
