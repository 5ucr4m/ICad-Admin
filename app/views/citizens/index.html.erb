<%= render 'application/page_header', model: Citizen %>
<div class="card">
  <div class="card-status bg-blue"></div>
  <div class="card-header p-4">
    <div class="col-sm-12 col-lg-12">
      <div class="form-row">
        <div class="col-sm-12 col-lg-6 p-0">
          <%= render 'application/pagy_count', list: @pagy %>
        </div>
        <div class="col-sm-12 col-lg-6 p-0">
          <%= search_form_for @query do |f| %>
          <%= f.search_field :search_cont, class: 'form-control', placeholder: t('helpers.search') %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="card-body table-responsive p-0 m-0">
    <table class="table card-table table-vcenter text-nowrap table-hover">
      <thead>
      <tr>
                  <th><%= Citizen.human_attribute_name :registry %></th>
                  <th><%= Citizen.human_attribute_name :gender %></th>
                  <th><%= Citizen.human_attribute_name :race %></th>
                  <th><%= Citizen.human_attribute_name :birth_state %></th>
                  <th><%= Citizen.human_attribute_name :nationality %></th>
                  <th><%= Citizen.human_attribute_name :birth_date %></th>
                  <th><%= Citizen.human_attribute_name :birth_country %></th>
                  <th><%= Citizen.human_attribute_name :mother_name %></th>
                  <th><%= Citizen.human_attribute_name :sus_card_number %></th>
                  <th><%= Citizen.human_attribute_name :pis_pasep_number %></th>
                  <th><%= Citizen.human_attribute_name :unknown_mother_name %></th>
                  <th><%= Citizen.human_attribute_name :responsible_person %></th>
                  <th><%= Citizen.human_attribute_name :health_condition %></th>
                  <th><%= Citizen.human_attribute_name :company %></th>
                  <th><%= Citizen.human_attribute_name :slug %></th>
                <th><%= t('helpers.labels.actions') %></th>
      </tr>
      </thead>
      <tbody>
      <% @citizens.each do |citizen| %>
        <tr>
                      <td><%= citizen.registry_id %></td>
                      <td><%= citizen.gender_id %></td>
                      <td><%= citizen.race_id %></td>
                      <td><%= citizen.birth_state_id %></td>
                      <td><%= citizen.nationality_id %></td>
                      <td><%= citizen.birth_date %></td>
                      <td><%= citizen.birth_country_id %></td>
                      <td><%= citizen.mother_name %></td>
                      <td><%= citizen.sus_card_number %></td>
                      <td><%= citizen.pis_pasep_number %></td>
                      <td><%= citizen.unknown_mother_name %></td>
                      <td><%= citizen.responsible_person_id %></td>
                      <td><%= citizen.health_condition_id %></td>
                      <td><%= citizen.company_id %></td>
                      <td><%= citizen.slug %></td>
                    <td class="text-center">
            <%= render 'application/table_links', f: citizen %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <div class="card-footer">
    <%= render 'application/footer_links', url: new_citizen_path, model: Citizen %>
  </div>
</div>
