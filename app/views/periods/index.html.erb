<%= render 'application/page_header', model: Period %>
<div class="card">
  <div class="card-status bg-transparent"></div>
  <div class="card-header p-4">
    <div class="col-sm-12 col-lg-12">
      <div class="form-row">
        <div class="col-sm-12 col-lg-6 p-0">
          <%= render 'application/pagy_count', list: @pagy, model: Period, url: new_period_path %>
        </div>
        <div class="col-sm-12 col-lg-6 p-0">
          <%= search_form_for @query do |f| %>
            <%= f.search_field :search_cont, class: 'form-control', placeholder: t('helpers.search') %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="card-body table-responsive p-0 m-0">
    <table class="table card-table table-vcenter text-nowrap table-hover">
      <thead>
      <tr>
        <th><%= Period.human_attribute_name :competence %></th>
        <th><%= Period.human_attribute_name :start_date %></th>
        <th><%= Period.human_attribute_name :end_date %></th>
        <th><%= Period.human_attribute_name :deadline %></th>
        <th><%= t('helpers.labels.actions') %></th>
      </tr>
      </thead>
      <tbody>
      <% @periods.each do |period| %>
        <tr>
          <td>
            <% month = period.competence.split('/')[0].to_i %>
            <% year = period.competence.split('/')[1].to_i %>
            <% if month == Time.current.month && year == Time.current.year %>
              <%= "#{t('date.month_names')[month]}/#{year}" %> (Atual)
            <% else %>
              <%= "#{t('date.month_names')[month]}/#{year}" %>
            <% end %>
          </td>
          <td><%= period.start_date.strftime('%d/%m/%Y') %></td>
          <td><%= period.end_date.strftime('%d/%m/%Y') %></td>
          <td><%= period.deadline.strftime('%d/%m/%Y') %></td>
          <td class="text-center">
            <%= render 'application/table_links', f: period %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <div class="card-footer">
    <%= render 'application/footer_links', url: new_period_path, model: Period %>
  </div>
</div>
