<%= render 'application/page_header', model: Vaccine %>
<div class="card">
  <div class="card-status bg-blue"></div>
  <div class="card-header p-4">
    <div class="col-sm-12 col-lg-12">
      <div class="form-row">
        <div class="col-sm-12 col-lg-6 p-0">
          <%= render 'application/pagy_count', list: @pagy %>
        </div>
        <div class="col-sm-12 col-lg-6 p-0">
          <%= search_form_for @query do |f| %>
            <%= f.search_field :search_cont, class: 'form-control', placeholder: t('helpers.search') %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="card-body table-responsive p-0 m-0">
    <table class="table card-table table-vcenter text-nowrap table-hover">
      <thead>
      <tr>
        <th><%= Vaccine.human_attribute_name :description %></th>
        <th><%= Vaccine.human_attribute_name :immunobiological %></th>
        <th><%= Vaccine.human_attribute_name :vaccination_strategy %></th>
        <th><%= Vaccine.human_attribute_name :dose %></th>
        <th><%= Vaccine.human_attribute_name :lot_number %></th>
        <th><%= Vaccine.human_attribute_name :manufacturer %></th>
        <th><%= Vaccine.human_attribute_name :company %></th>
        <th><%= Vaccine.human_attribute_name :slug %></th>
        <th><%= t('helpers.labels.actions') %></th>
      </tr>
      </thead>
      <tbody>
      <% @vaccines.each do |vaccine| %>
        <tr>
          <td><%= vaccine.description %></td>
          <td><%= vaccine.immunobiological_id %></td>
          <td><%= vaccine.vaccination_strategy_id %></td>
          <td><%= vaccine.dose_id %></td>
          <td><%= vaccine.lot_number %></td>
          <td><%= vaccine.manufacturer %></td>
          <td><%= vaccine.company_id %></td>
          <td><%= vaccine.slug %></td>
          <td class="text-center">
            <%= render 'application/table_links', f: vaccine %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <div class="card-footer">
    <%= render 'application/footer_links', url: new_vaccine_path, model: Vaccine %>
  </div>
</div>
