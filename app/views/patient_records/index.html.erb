<%= render 'application/page_header', model: PatientRecord %>
<div class="card">
  <div class="card-status bg-transparent"></div>
  <div class="card-header p-4">
    <div class="col-sm-12 col-lg-12">
      <div class="form-row">
        <div class="col-sm-12 col-lg-6 p-0">
          <%= render 'application/pagy_count', list: @pagy, model: PatientRecord, url: nil %>
        </div>
        <div class="col-sm-12 col-lg-6 p-0">
          <%= search_form_for @query do |f| %>
            <%= f.search_field :search_cont, class: 'form-control', placeholder: t('helpers.search') %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="card-body table-responsive p-0 m-0">
    <table class="table card-table table-vcenter text-nowrap table-hover">
      <thead>
      <tr>
        <th><%= PatientRecord.human_attribute_name :appointment_booking %></th>
        <th><%= PatientRecord.human_attribute_name :appointment_demand %></th>
        <th><%= PatientRecord.human_attribute_name :user %></th>
        <th><%= t('helpers.actions.action') %></th>
      </tr>
      </thead>
      <tbody>
      <% @patient_records.each do |patient_record| %>
        <tr>
          <td><%= patient_record.appointment_booking_id %></td>
          <td><%= patient_record.appointment_demand_id %></td>
          <td><%= patient_record.user_id %></td>
          <td class="text-center">
            <%= render 'application/table_links', f: patient_record %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <div class="card-footer">
    <%= render 'application/footer_links', url: nil, model: PatientRecord %>
  </div>
</div>
