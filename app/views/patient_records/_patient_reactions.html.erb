<div class="col-lg-12">
  <div class="card card-collapsed mb-2">
    <div class="card-header">
      <h3 class="card-title">
        <i class="fas fa-head-side-cough mr-2"></i>Alergias / Reações Adversas
      </h3>
      <div class="card-options">
        <a href="#" class="card-options-collapse badge bg-blue-deep text-white p-1" data-toggle="card-collapse">
          <i class="fe fe-chevron-up"></i>
        </a>
      </div>
    </div>
    <div id="patient-reactions" class="card-body pb-2">
      <% if @family_member&.patient_reactions&.any? %>
        <div class="table-responsive">
          <table class="table table-bordered table-condensed table-hover">
            <thead>
            <tr>
              <th>Alergia</th>
              <th>Data Instalação</th>
            </tr>
            </thead>
            <tbody>
            <% @family_member.patient_reactions.each do |patient_reaction| %>
              <tr>
                <td>
                  <div class="row">
                    <div class="col-lg-12 text-left">
                      <%= patient_reaction&.reaction&.name_formatted %>
                    </div>
                    <div class="col-lg-12 text-left">
                      <%= patient_reaction.agent_substance %>
                    </div>
                    <div class="col-lg-12 text-left">
                      <%= patient_reaction.manifestations %>
                    </div>
                  </div>
                </td>
                <td><%= patient_reaction.installation_date&.strftime('%d/%m/%Y') %></td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="alert alert-warning">
          <div class="row">
            <div class="col-lg-12">
              <div class="text-center">
                <div class="font-weight-bold">Nenhum reação alérgica encontrada.</div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
