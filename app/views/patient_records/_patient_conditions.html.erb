<%= f.simple_fields_for :family_member do |family_member| %>
  <div class="col-lg-12">
    <div class="card card-collapsed mb-2">
      <div class="card-header">
        <h3 class="card-title">
          <i class="fas fa-head-side-virus mr-2"></i>Problemas / Condições
        </h3>
        <div class="card-options">
          <a href="#" class="card-options-collapse badge bg-blue-deep text-white p-1" data-toggle="card-collapse">
            <i class="fe fe-chevron-up"></i>
          </a>
        </div>
      </div>
      <div id="problem-conditions" class="card-body pb-2">
        <% if @family_member&.patient_medicines&.any? %>
          <div class="table-responsive">
            <table class="table table-bordered table-condensed table-hover">
              <thead>
              <tr>
                <th>Medicamento</th>
                <th>Prescrição</th>
                <th>Conclusão</th>
              </tr>
              </thead>
              <tbody>
              <% @family_member.patient_medicines.each do |patient_medicine| %>
                <tr>
                  <td><%= patient_medicine.situation %></td>
                  <td><%= patient_medicine&.ciap_code&.name_formatted ||
                            patient_medicine&.cid_code&.name_formatted || patient_medicine.other_condition %></td>
                  <td><%= patient_medicine.year_initial %></td>
                  <td><%= patient_medicine.last_update&.strftime('%d/%m/%Y') %></td>
                </tr>
              <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <div class="alert alert-warning">
            <div class="row">
              <div class="col-lg-12">
                <div class="text-center">
                  <div class="font-weight-bold">Nenhum medicamento ativo encontrado.</div>
                </div>
              </div>
              <div class="col-lg-12">
                <div class="text-center">
                  <button class="btn btn-primary" role="button">
                    <i class="fas fa-plus mr-2"></i>Incluir
                  </button>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
