<div class="col-lg-12">
  <div class="card card-collapsed mb-2">
    <div class="card-header">
      <h3 class="card-title">
        <i class="fas fa-pills mr-2"></i>Medicamentos Ativos
      </h3>
      <div class="card-options">
        <a href="#" class="card-options-collapse badge bg-blue-deep text-white p-1" data-toggle="card-collapse">
          <i class="fe fe-chevron-up"></i>
        </a>
      </div>
    </div>
    <div id="patient-medicines" class="card-body pb-2">
      <% if @family_member&.patient_reactions&.any? %>
        <div class="table-responsive">
          <table class="table table-bordered table-condensed table-hover">
            <thead>
            <tr>
              <th>Medicamento</th>
              <th>Início</th>
              <th>Em uso</th>
              <th>Contínuo</th>
            </tr>
            </thead>
            <tbody>
            <% @family_member.patient_reactions.each do |patient_reaction| %>
              <tr>
                <td><%= patient_reaction&.medicine&.name %></td>
                <td><%= patient_reaction.prescription&.strftime('%d/%m/%Y') %></td>
                <td><%= patient_reaction.prescription > Date.today ? 'NÃO' : 'SIM' %></td>
                <td><%= patient_reaction.continuous_use  ? 'SIM' : 'NÃO' %></td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="alert alert-warning">
          <div class="row">
            <div class="col-lg-12">
              <div class="text-center">
                <div class="font-weight-bold">Nenhum medicamento ativo encontrado.</div>
              </div>
            </div>
            <div class="col-lg-12">
              <div class="text-center">
                <button class="btn btn-primary" role="button">
                  <i class="fas fa-plus mr-2"></i>Incluir
                </button>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
