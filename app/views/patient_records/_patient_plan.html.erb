                      <%= link_to_add_association f, :patient_soap_exams,
                                                  class: 'btn btn-sm btn-primary', role: 'button',
                                                  data: {
                                                    'association-insertion-node': '#patient-soap-exams',
                                                    'association-insertion-method': 'append'
                                                  } do %>
                        <i class="fas fa-plus mr-2" aria-hidden="true"></i>Novo
                      <% end %>
                    </div>
                  <% end %>
                </div>
                <div class="tab-pane" id="reminders">
                  <div id="patient-soap-reminders" class="card-body p-2">
                    <%= f.simple_fields_for :patient_soap_reminders do |patient_soap_reminder| %>
                      <%= render 'patient_soap_reminder_fields', f: patient_soap_reminder %>
                    <% end %>
                  </div>
                  <% unless show?(f.object.persisted?) %>
                    <div class="card-body p-2">
                      <%= link_to_add_association f, :patient_soap_reminders,
                                                  class: 'btn btn-sm btn-primary', role: 'button',
                                                  data: {
                                                    'association-insertion-node': '#patient-soap-reminders',
                                                    'association-insertion-method': 'append'
                                                  } do %>
                        <i class="fas fa-plus mr-2" aria-hidden="true"></i>Novo
                      <% end %>
                    </div>
                  <% end %>
                </div>
                <div class="tab-pane" id="prescription">
                  <div id="patient-soap-medicines" class="card-body p-2">
                    <%= f.simple_fields_for :patient_soap_medicines do |patient_soap_medicine| %>
                      <%= render 'patient_soap_medicine_fields', f: patient_soap_medicine %>
                    <% end %>
                  </div>
                  <% unless show?(f.object.persisted?) %>
                    <div class="card-body p-2">
                      <%= link_to_add_association f, :patient_soap_medicines,
                                                  class: 'btn btn-sm btn-primary', role: 'button',
                                                  data: {
                                                    'association-insertion-node': '#patient-soap-medicines',
                                                    'association-insertion-method': 'append'
                                                  } do %>
                        <i class="fas fa-plus mr-2" aria-hidden="true"></i>Novo
                      <% end %>
                    </div>
                  <% end %>
                </div>
                <div class="tab-pane" id="orientations">
                  <div id="patient-soap-orientations" class="card-body p-2">
                    <%= f.simple_fields_for :patient_soap_orientations do |patient_soap_orientation| %>
                      <%= render 'patient_soap_orientation_fields', f: patient_soap_orientation %>
                    <% end %>
                  </div>
                  <% unless show?(f.object.persisted?) %>
                    <div class="card-body p-2">
                      <%= link_to_add_association f, :patient_soap_orientations,
                                                  class: 'btn btn-sm btn-primary', role: 'button',
                                                  data: {
                                                    'association-insertion-node': '#patient-soap-orientations',
                                                    'association-insertion-method': 'append'
                                                  } do %>
                        <i class="fas fa-plus mr-2" aria-hidden="true"></i>Novo
                      <% end %>
                    </div>
                  <% end %>
                </div>
                <div class="tab-pane" id="referrals">
                  <div id="patient-soap-referrals" class="card-body p-2">
                    <%= f.simple_fields_for :patient_soap_referrals do |patient_soap_referral| %>
                      <%= render 'patient_soap_referral_fields', f: patient_soap_referral %>
                    <% end %>
                  </div>
                  <% unless show?(f.object.persisted?) %>
                    <div class="card-body p-2">
                      <%= link_to_add_association f, :patient_soap_referrals,
                                                  class: 'btn btn-sm btn-primary', role: 'button',
                                                  data: {
                                                    'association-insertion-node': '#patient-soap-referrals',
                                                    'association-insertion-method': 'append'
                                                  } do %>
                        <i class="fas fa-plus mr-2" aria-hidden="true"></i>Novo
                      <% end %>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
