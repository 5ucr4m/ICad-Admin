<%= render 'application/page_header', model: Vaccination %>
<div class="card">
  <div class="card-status bg-transparent"></div>
  <div class="card-header p-4">
    <div class="col-sm-12 col-lg-12">
      <div class="form-row">
        <div class="col-sm-12 col-lg-6 p-0">
          <%= render 'application/pagy_count', list: @pagy %>
        </div>
        <div class="col-sm-12 col-lg-6 p-0">
          <%= search_form_for @query do |f| %>
            <%= f.search_field :search_cont, class: 'form-control', placeholder: t('helpers.search') %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="card-body table-responsive p-0 m-0">
    <table class="table card-table table-vcenter text-nowrap table-hover">
      <thead>
      <tr>
        <th><%= Vaccination.human_attribute_name :id %></th>
        <th><%= Vaccination.human_attribute_name :patient_type %></th>
        <th><%= Vaccination.human_attribute_name :vaccination_campaign %></th>
        <th><%= Vaccination.human_attribute_name :family_member %></th>
        <th><%= t('helpers.labels.actions') %></th>
      </tr>
      </thead>
      <tbody>
      <% @vaccinations.each do |vaccination| %>
        <tr>
          <td><%= vaccination.id %></td>
          <td><%= vaccination.patient_type %></td>
          <td><%= vaccination.vaccination_campaign.title %></td>
          <td><%= vaccination.family_member.name %></td>
          <td class="text-center">
            <%= render 'application/table_links', f: vaccination %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <div class="card-footer">
    <%= render 'application/footer_links', url: new_vaccination_path, model: Vaccination %>
  </div>
</div>
