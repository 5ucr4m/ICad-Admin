<%= render 'application/page_header', model: Company %>
<div class="card">
  <div class="card-status bg-blue"></div>
  <div class="card-header p-4">
    <div class="col-sm-12 col-lg-12">
      <div class="form-row">
        <div class="col-sm-12 col-lg-6 p-0">
          <%= render 'application/pagy_count', list: @pagy %>
        </div>
        <div class="col-sm-12 col-lg-6 p-0">
          <%= search_form_for @query do |f| %>
            <%= f.search_field :search_cont, class: 'form-control', placeholder: t('helpers.search') %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="card-body table-responsive p-0 m-0">
    <table class="table card-table table-vcenter text-nowrap table-hover">
      <thead>
      <tr>
        <th>#</th>
        <th><%= Company.human_attribute_name :legal_full_name %></th>
        <th><%= Company.human_attribute_name :fancy_name %></th>
        <th><%= Company.human_attribute_name :federal_registry %></th>
        <th><%= Company.human_attribute_name :state_registry %></th>
        <th><%= Company.human_attribute_name :city %></th>
        <th><%= City.human_attribute_name :state %></th>
        <th><%= t('helpers.labels.actions') %></th>
      </tr>
      </thead>
      <tbody>
      <% @companies.each do |company| %>
        <tr>
          <td class="text-muted">
            <%= company.id.to_s.rjust 8, '0' %>
          </td>
          <td><%= company.legal_full_name %></td>
          <td><%= company.fancy_name %></td>
          <td><%= company.federal_registry %></td>
          <td><%= company.state_registry %></td>
          <td><%= company.city.name %></td>
          <td><%= company.city.state.name_formatted %></td>
          <td class="text-center">
            <%= render 'application/table_links', f: company %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <div class="card-footer">
    <%= render 'application/footer_links', url: new_company_path, model: Company %>
  </div>
</div>
