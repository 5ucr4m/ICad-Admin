<%= render 'application/page_header', model: User %>
<div class="card">
  <div class="card-status bg-transparent"></div>
  <div class="card-header p-4">
    <div class="col-sm-12 col-lg-12">
      <div class="form-row">
        <div class="col-sm-12 col-lg-6 p-0">
          <%= render 'application/pagy_count', list: @pagy, model: User, url: new_user_path %>
        </div>
        <div class="col-sm-12 col-lg-6 p-0">
          <%= search_form_for @query do |f| %>
            <%= f.search_field :search_cont, class: 'form-control', placeholder: t('helpers.search') %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="card-body table-responsive p-0 m-0">
    <table class="table card-table table-vcenter text-nowrap table-hover">
      <thead>
      <tr>
        <th>#</th>
        <th><%= User.human_attribute_name :email %></th>
        <th><%= User.human_attribute_name :health_professional %></th>
        <th><%= HealthProfessional.human_attribute_name :cns_code %></th>
        <th><%= HealthProfessional.human_attribute_name :health_establishment %></th>
        <% if can? :manage, User %>
          <th><%= t('helpers.actions.action') %></th>
        <% end %>
      </tr>
      </thead>
      <tbody>
      <% @users.includes(:health_professional).each do |user| %>
        <tr>
          <td class="text-muted"><%= user.id %></td>
          <td><%= user.email %></td>
          <td><%= user&.health_professional&.full_name %></td>
          <td><%= user&.health_professional&.cns_code %></td>
          <td><%= user&.health_professional&.professional_team&.health_establishment&.cnes_code %></td>
          <% if can? :manage, User %>
            <td>
              <%= render 'application/table_links', f: user %>
            </td>
          <% end %>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <div class="card-footer">
    <%= render 'application/footer_links', url: new_user_path, model: Family %>
  </div>
</div>
