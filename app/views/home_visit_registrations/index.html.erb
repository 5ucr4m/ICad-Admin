<%= render 'application/page_header', model: HomeVisitRegistration %>
<div class="card">
  <div class="card-status bg-transparent"></div>
  <div class="card-header p-4">
    <div class="col-sm-12 col-lg-12">
      <div class="form-row">
        <div class="col-sm-12 col-lg-6 p-0">
          <%= render 'application/pagy_count', list: @pagy, model: HomeVisitRegistration, url: new_home_visit_registration_path %>
        </div>
        <div class="col-sm-12 col-lg-6 p-0">
          <%= search_form_for @query do |f| %>
            <%= f.search_field :search_cont, class: 'form-control', placeholder: t('helpers.search') %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="card-body table-responsive p-0 m-0">
    <table class="table card-table table-vcenter text-nowrap table-hover">
      <thead>
      <tr>
        <th><%= FamilyMember.human_attribute_name :name %></th>
        <th><%= FamilyMember.human_attribute_name :social_name %></th>
        <th><%= FamilyMember.human_attribute_name :age %></th>
        <th><%= HomeVisitForm.human_attribute_name :service_at %></th>
        <th><%= t('helpers.actions.action') %></th>
      </tr>
      </thead>
      <tbody>
      <% @home_visit_registrations.includes(:family_member).each do |home_visit_registration| %>
        <tr>
          <td><%= home_visit_registration.family_member.name %></td>
          <td><%= home_visit_registration.family_member.social_name %></td>
          <td><%= home_visit_registration.family_member.age.upcase %></td>
          <td><%= home_visit_registration.home_visit_forms.blank? ?
                    home_visit_registration.service_at&.strftime('%d/%m/%Y - %I:%M %p') :
                    home_visit_registration.home_visit_forms&.last&.service_at&.strftime('%d/%m/%Y - %I:%M %p') %></td>
          <td class="text-center">
            <%= render 'application/table_links', f: home_visit_registration %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <div class="card-footer">
    <%= render 'application/footer_links', url: new_home_visit_registration_path, model: HomeVisitRegistration %>
  </div>
</div>
