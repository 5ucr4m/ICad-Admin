<%= simple_form_for(@sms_message) do |f| %>
  <% content_for :body do %>
    <%= f.input :date_sent, html5: true, wrapper_html: {class: 'col-lg-3 col-sm-12'}, input_html: {disabled: show?(f.object.persisted?)} %>
    <%= f.input :number, wrapper_html: {class: 'col-lg-3 col-sm-12'}, input_html: {class: 'phone', disabled: show?(f.object.persisted?)} %>
    <%= f.input :status, as: :select, collection: SmsSchedule.statuses.collect{|v,k| [t("activerecord.attributes.sms_schedule.statuses.#{v}").upcase,v]}, wrapper_html: {class: 'col-lg-3 col-sm-12'}, input_html: {class: 'select2', disabled: show?(f.object.persisted?)} %>
    <%= f.association :sms_schedule, label_method: :name_formatted, wrapper_html: {class: 'col-lg-3 col-sm-12'}, input_html: {class: 'select2', disabled: show?(f.object.persisted?)} %>
  <% end %>
  <%= render template: 'application/form', locals: {form: @sms_message} %>
<% end %>
