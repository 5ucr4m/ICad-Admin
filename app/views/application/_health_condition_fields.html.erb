                <a href="#" class="card-options-collapse badge bg-blue-deep text-white p-1" data-toggle="card-collapse">
                  <i class="fe fe-chevron-up"></i>
                </a>
              </div>
            </div>
            <% unless show?(f.object.persisted?) %>
              <div class="card-body py-2">
                <%= link_to_add_association f, :health_condition_respiratories,
                                            class: 'btn btn-sm btn-primary', role: 'button',
                                            data: {
                                              'association-insertion-node': '#respiratories',
                                              'association-insertion-method': 'append'
                                            } do %>
                  <i class="fas fa-plus mr-2" aria-hidden="true"></i>Novo
                <% end %>
              </div>
            <% end %>
            <div id="respiratories" class="card-body">
              <%= f.simple_fields_for :health_condition_respiratories do |health_condition_respiratory| %>
                <%= render 'application/health_condition_respiratory_fields', f: health_condition_respiratory %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
