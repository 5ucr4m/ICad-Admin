<% content_for :page_header do %>
  <div class="page-header my-3">
    <h1 class="page-title font-weight-bold">
      <i class="<%= t("activerecord.models.#{model.model_name.singular}.icon") %> mr-2"></i><%= model.model_name.human(count: 2) %>
      <% if %w(edit new create show).include? action_name %>
        <small class="ml-1 text-muted">
          <%= t("helpers.actions.#{action_name}") %>
        </small>
      <% end %>
    </h1>
    <div class="page-options d-none d-md-block ml-auto">
      <%= render 'breadcrumb' %>
    </div>
  </div>
<% end %>
