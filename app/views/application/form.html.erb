<%= render 'application/page_header', model: form %>
<div class="card">
  <div class="card-status <%= form.errors.any? ? 'bg-red' : 'bg-blue' %>"></div>
  <div class="card-header px-4">
    <h1 class="card-title">
      <%= if form&.id.present?
            action_name == 'show' ? 'Visualizar' : 'Editar'
          else
            'Novo(a)'
          end %> <%= form.model_name.human %>
    </h1>
  </div>
  <div class="card-body <%= 'pt-0 pb-0' if (tabs ||= nil) %>">
    <div class="form-row">
      <%= yield :body %>
    </div>
  </div>
  <div class="card-footer">
    <div class="row">
      <div class="col">
        <div class="float-left">
          <%= render 'application/form_buttons', f: form %>
        </div>
      </div>
    </div>
  </div>
</div>
