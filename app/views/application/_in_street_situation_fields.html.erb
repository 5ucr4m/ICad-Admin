<div class="form-row">
  <%= f.input :kinship_degree, wrapper_html: {class: 'col-lg-6 col-sm-12'}, input_html: {disabled: show?(f.object.persisted?)} %>
  <%= f.input :other_accompanied, wrapper_html: {class: 'col-lg-6 col-sm-12'}, input_html: {disabled: show?(f.object.persisted?)} %>
  <%= f.association :meals_per_day, collection: GenericModel.meals_per_day, label_method: :name_formatted, wrapper_html: {class: 'col-lg-3 col-sm-12'}, input_html: {class: 'select2', disabled: show?(f.object.persisted?)} %>
  <%= f.association :street_situation_time, collection: GenericModel.street_situation_time, label_method: :name_formatted, wrapper_html: {class: 'col-lg-3 col-sm-12'}, input_html: {class: 'select2', disabled: show?(f.object.persisted?)} %>
  <div class="col-12">
    <div class="form-row">
      <%= f.input :has_other_accompanied, wrapper_html: {class: 'pl-2 col-lg-3 col-sm-12'}, input_html: {disabled: show?(f.object.persisted?)} %>
      <%= f.input :familiar_reference, wrapper_html: {class: 'pl-2 col-lg-3 col-sm-12'}, input_html: {disabled: show?(f.object.persisted?)} %>
      <%= f.input :receive_benefits, wrapper_html: {class: 'pl-2 col-lg-3 col-sm-12'}, input_html: {disabled: show?(f.object.persisted?)} %>
      <%= f.input :in_street_situation, wrapper_html: {class: 'pl-2 col-lg-3 col-sm-12'}, input_html: {disabled: show?(f.object.persisted?)} %>
      <%= f.input :has_personal_hygiene, wrapper_html: {class: 'pl-2 col-lg-3 col-sm-12'}, input_html: {disabled: show?(f.object.persisted?)} %>
      <%= f.input :family_visit, wrapper_html: {class: 'pl-2 col-lg-3 col-sm-12'}, input_html: {disabled: show?(f.object.persisted?)} %>
    </div>
  </div>
  <div class="col-12">
    <div class="card card-collapsed mb-3">
      <div class="card-header">
        <h3 class="card-title">
          <i class="fas fa-bath mr-2"></i><%= InStreetHygieneAccess.model_name.human(count: 2) %>
        </h3>
        <div class="card-options">
          <a href="#" class="card-options-collapse badge bg-blue-deep text-white p-1" data-toggle="card-collapse"><i class="fe fe-chevron-up"></i></a>
        </div>
      </div>
      <div class="card-body">
        <% if f.object.in_street_hygiene_accesses.any? %>
          <div class="table-responsive">
            <table class="table table-hover table-outline table-vcenter text-nowrap card-table">
              <thead>
              <tr>
                <th>#</th>
                <th><%= InStreetHygieneAccess.human_attribute_name :hygiene_access %></th>
                <th>Data</th>
              </tr>
              </thead>
              <tbody>
              <% f.object.in_street_hygiene_accesses.each_with_index do |in_street_hygiene, index| %>
                <tr>
                  <td><%= index = index + 1 %></td>
                  <td><%= in_street_hygiene.hygiene_access.name_formatted %></td>
                  <td><%= in_street_hygiene.created_at.strftime('%d/%m/%Y') %></td>
                </tr>
              <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <div class="alert alert-warning alert-dismissible p-4 text-center font-weight-bold" role="alert">
            <i class="fas fa-exclamation-triangle mr-2"></i>Nenhuma acesso a Higiene registrado.
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
