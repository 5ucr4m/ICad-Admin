<% if controller_name == 'registrations' %>
  <div class="flex-fill">
    <%= render 'application/navbar' %>
    <%= render 'application/menu' %>
    <div class="mt-2 mt-md-2">
      <div class="container-fluid">
        <%= render 'application/flashes' %>
        <% if controller_name == 'dashboards' %>
          <div class="page-header my-3">
            <h1 class="page-title font-weight-bold">
              <i class="fas fa-chart-line mr-2"></i>Dashboard
            </h1>
            <div class="page-options d-none d-md-block ml-auto">
              <h4 class="m-0"><%= treatment_title current_user.role.role_type %> <span class="text-blue-night"><%= current_user&.health_professional&.full_name || current_user.email %></span>. Bem-vindo a sua p√°gina!</h4>
            </div>
          </div>
        <% else %>
          <%= yield :page_header %>
        <% end %>
        <%= yield %>
      </div>
    </div>
  </div>
<% else %>
  <div class="page">
    <div class="container">
      <div class="row">
        <div class="col col-login mx-auto">
          <div class="text-center mb-6">
            <%= image_tag 'logo.png', class: 'h-8', alt: 'logo' %>
          </div>
          <%= yield %>
        </div>
      </div>
    </div>
  </div>
<% end %>
