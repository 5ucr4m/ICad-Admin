<% if can? :read, f.model_name.singular.camelize.constantize %>
  <%= link_to f, class: 'btn p-1 btn-info mr-1', role: 'button' do %>
    <i class="fas fa-search p-0"></i>
  <% end %>
<% end %>
<% if can? :update, f.model_name.singular.camelize.constantize %>
  <%= link_to send("edit_#{f.model_name.singular}_path", f),
              class: 'btn p-1 btn-primary mr-1', role: 'button' do %>
    <i class="fas fa-edit p-0"></i>
  <% end %>
<% end %>
<% if can? :update, f.model_name.singular.camelize.constantize %>
  <%= link_to f, class: 'btn p-1 btn-danger', method: :delete,
              data: {confirm: "Confirma a remoção do registro de código ##{f.id}?"},
              role: 'button' do %>
    <i class="fas fa-trash p-0"></i>
  <% end %>
<% end %>
