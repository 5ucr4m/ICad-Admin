<%= render 'application/page_header', model: HealthEstablishment %>
<div class="card">
  <div class="card-status bg-blue"></div>
  <div class="card-header p-4">
    <div class="col-sm-12 col-lg-12">
      <div class="form-row">
        <div class="col-sm-12 col-lg-6 p-0">
          <%= render 'application/pagy_count', list: @pagy %>
        </div>
        <div class="col-sm-12 col-lg-6 p-0">
          <%= search_form_for @query do |f| %>
          <%= f.search_field :search_cont, class: 'form-control', placeholder: t('helpers.search') %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="card-body table-responsive p-0 m-0">
    <table class="table card-table table-vcenter text-nowrap table-hover">
      <thead>
      <tr>
                  <th><%= HealthEstablishment.human_attribute_name :cnes_code %></th>
                  <th><%= HealthEstablishment.human_attribute_name :unit_code %></th>
                  <th><%= HealthEstablishment.human_attribute_name :registry %></th>
                  <th><%= HealthEstablishment.human_attribute_name :registry_at %></th>
                  <th><%= HealthEstablishment.human_attribute_name :manager %></th>
                  <th><%= HealthEstablishment.human_attribute_name :unit_type %></th>
                  <th><%= HealthEstablishment.human_attribute_name :company %></th>
                  <th><%= HealthEstablishment.human_attribute_name :slug %></th>
                <th><%= t('helpers.labels.actions') %></th>
      </tr>
      </thead>
      <tbody>
      <% @health_establishments.each do |health_establishment| %>
        <tr>
                      <td><%= health_establishment.cnes_code %></td>
                      <td><%= health_establishment.unit_code %></td>
                      <td><%= health_establishment.registry_id %></td>
                      <td><%= health_establishment.registry_at %></td>
                      <td><%= health_establishment.manager_id %></td>
                      <td><%= health_establishment.unit_type_id %></td>
                      <td><%= health_establishment.company_id %></td>
                      <td><%= health_establishment.slug %></td>
                    <td class="text-center">
            <%= render 'application/table_links', f: health_establishment %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <div class="card-footer">
    <%= render 'application/footer_links', url: new_health_establishment_path, model: HealthEstablishment %>
  </div>
</div>
