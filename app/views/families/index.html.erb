<%= render 'application/page_header', model: Family %>
<div class="card">
  <div class="card-status bg-transparent"></div>
  <div class="card-header p-4">
    <div class="col-sm-12 col-lg-12">
      <div class="form-row">
        <div class="col-sm-12 col-lg-6 p-0">
          <%= render 'application/pagy_count', list: @pagy %>
        </div>
        <div class="col-sm-12 col-lg-6 p-0">
          <%= search_form_for @query do |f| %>
            <%= f.search_field :search_cont, class: 'form-control', placeholder: t('helpers.search') %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="card-body table-responsive p-0 m-0">
    <table class="table card-table table-vcenter text-nowrap table-hover">
      <thead>
      <tr>
        <th>#</th>
        <th><%= Family.human_attribute_name :members_quantity %></th>
        <th><%= Family.human_attribute_name :handbook_number %></th>
        <th><%= Family.human_attribute_name :family_income %></th>
        <th><%= Family.human_attribute_name :reside_since %></th>
        <th><%= Family.human_attribute_name :moving %></th>
        <th><%= t('helpers.labels.actions') %></th>
      </tr>
      </thead>
      <tbody>
      <% @families.each do |family| %>
        <tr>
          <td class="text-muted">
            <%= family.id.to_s.rjust 8, '0' %>
          </td>
          <td><%= family.members_quantity %></td>
          <td><%= family.handbook_number %></td>
          <td><%= family&.family_income.reference %></td>
          <td><%= family.reside_since&.strftime('%d/%m/%Y') %></td>
          <td><%= family.moving ? 'SIM' : 'NÃƒO' %></td>
          <td class="text-center">
            <%= render 'application/table_links', f: family %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <div class="card-footer">
    <%= render 'application/footer_links', url: new_family_path, model: Family %>
  </div>
</div>
