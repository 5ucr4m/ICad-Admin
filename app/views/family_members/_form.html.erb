<%= simple_form_for @family_member do |f| %>
  <% content_for :body do %>
    <%= f.input :name, wrapper_html: {class: 'col-lg-6 col-sm-12'}, input_html: {disabled: show?(f.object.persisted?)} %>
    <%= f.input :social_name, wrapper_html: {class: 'col-lg-6 col-sm-12'}, input_html: {disabled: show?(f.object.persisted?)} %>
    <%= f.input :mother_name, wrapper_html: {class: 'col-lg-6 col-sm-12'}, input_html: {disabled: show?(f.object.persisted?)} %>
    <%= f.input :father_name, wrapper_html: {class: 'col-lg-6 col-sm-12'}, input_html: {disabled: show?(f.object.persisted?)} %>
    <%= f.association :family,
                      collection: @family_selected ? [@family_selected] : [],
                      selected: @family_selected,
                      label_method: :handbook_number,
                      wrapper_html: {class: 'col-lg-6 col-sm-12'}, input_html: {class: 'families', disabled: show?(f.object.persisted?)} %>
    <%= f.input :birth_date, html5: true, wrapper_html: {class: 'col-lg-3 col-sm-12'}, input_html: {disabled: show?(f.object.persisted?)} %>
    <%= f.association :birth_country, collection: GenericModel.countries,
                      label_method: :name_formatted,
                      wrapper_html: {class: 'col-lg-3 col-sm-12'}, input_html: {class: 'select2', disabled: show?(f.object.persisted?)} %>
    <%= f.association :city,
                      collection: @city_selected ? [@city_selected] : [],
                      selected: @city_selected,
                      label_method: :name_formatted,
                      wrapper_html: {class: 'col-lg-6 col-sm-12'}, input_html: {class: 'cities', disabled: show?(f.object.persisted?)} %>
    <%= f.association :nationality, collection: GenericModel.nationalities,
                      wrapper_html: {class: 'col-lg-3 col-sm-12'}, input_html: {class: 'select2', disabled: show?(f.object.persisted?)} %>
    <%= f.input :naturalized_at, html5: true, wrapper_html: {class: 'col-lg-3 col-sm-12'}, input_html: {disabled: show?(f.object.persisted?)} %>
    <%= f.input :naturalize_decree, wrapper_html: {class: 'col-lg-6 col-sm-12'}, input_html: {disabled: show?(f.object.persisted?)} %>
    <%= f.input :brazil_entry_date, html5: true, wrapper_html: {class: 'col-lg-3 col-sm-12'}, input_html: {disabled: show?(f.object.persisted?)} %>
    <%= f.input :email, wrapper_html: {class: 'col-lg-3 col-sm-12'}, input_html: {disabled: show?(f.object.persisted?)} %>
    <%= f.input :cns_number, wrapper_html: {class: 'col-lg-3 col-sm-12'}, input_html: {disabled: show?(f.object.persisted?)} %>
    <%= f.input :cns_responsible, wrapper_html: {class: 'col-lg-3 col-sm-12'}, input_html: {disabled: show?(f.object.persisted?)} %>
    <%= f.input :phone, wrapper_html: {class: 'col-lg-3 col-sm-12'}, input_html: {class: 'phone', disabled: show?(f.object.persisted?)} %>
    <%= f.input :pis_pasep_number, wrapper_html: {class: 'col-lg-3 col-sm-12'}, input_html: {disabled: show?(f.object.persisted?)} %>
    <%= f.association :race, collection: GenericModel.races, label_method: :name_formatted, wrapper_html: {class: 'col-lg-3 col-sm-12'}, input_html: {class: 'select2', disabled: show?(f.object.persisted?)} %>
    <%= f.association :gender, collection: GenericModel.genders, label_method: :name_formatted, wrapper_html: {class: 'col-lg-3 col-sm-12'}, input_html: {class: 'select2', disabled: show?(f.object.persisted?)} %>
    <%= f.association :user, collection: User.citizens, label_method: :email, wrapper_html: {class: 'col-lg-3 col-sm-12'}, input_html: {class: 'select2', disabled: show?(f.object.persisted?)} %>
    <%= f.input :micro_area, wrapper_html: {class: 'col-lg-3 col-sm-12'}, input_html: {disabled: show?(f.object.persisted?)} %>
    <%= f.association :ethnicity,
                      collection: @ethnicity_selected ? [@ethnicity_selected] : [],
                      selected: @ethnicity_selected,
                      label_method: :name_formatted,
                      wrapper_html: {class: 'col-lg-6 col-sm-12'}, input_html: {class: 'ethnicity-types', disabled: show?(f.object.persisted?)} %>
    <div class="col-lg-12 col-sm-12">
      <div class="form-row">
        <%= f.input :unknown_father, wrapper_html: {class: 'pl-2 col-lg-6 col-sm-12 pl-2'}, input_html: {disabled: show?(f.object.persisted?)} %>
        <%= f.input :unknown_mother, wrapper_html: {class: 'pl-2 col-lg-6 col-sm-12 pl-2'}, input_html: {disabled: show?(f.object.persisted?)} %>
        <%= f.input :responsible, wrapper_html: {class: 'pl-2 col-lg-6 col-sm-12 pl-2'}, input_html: {disabled: show?(f.object.persisted?)} %>
        <%= f.input :out_area, wrapper_html: {class: 'pl-2 col-lg-6 col-sm-12 pl-2'}, input_html: {disabled: show?(f.object.persisted?)} %>
      </div>
    </div>
    <% if @family_member.vaccinations.any? %>
      <div class="col-lg-12">
        <div class="card card-collapsed">
          <div class="card-header">
            <h3 class="card-title">
              <i class="fas fa-syringe mr-2"></i><%= Vaccination.model_name.human(count: 2) %>
            </h3>
            <div class="card-options">
              <a href="#" class="card-options-collapse badge bg-blue-deep text-white p-1" data-toggle="card-collapse"><i class="fe fe-chevron-up"></i></a>
            </div>
          </div>
          <div class="table-responsive">
            <table class="table card-table table-vcenter text-nowrap">
              <thead>
              <tr>
                <th><%= Vaccine.human_attribute_name :dose %></th>
                <th><%= Vaccine.human_attribute_name :description %></th>
                <th>Data</th>
              </tr>
              </thead>
              <tbody>
              <% @family_member.vaccinations.map(&:vaccines).flatten.each do |vaccine| %>
                <tr>
                  <td><%= vaccine.dose.name_formatted %></td>
                  <td><%= vaccine.description %></td>
                  <td><%= vaccine.created_at.strftime('%d/%m/%Y') %></td>
                </tr>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
  <%= render template: 'application/form', locals: {form: @family_member} %>
<% end %>
